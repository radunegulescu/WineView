<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Wine List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Wine" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Wine
            </a>
        </div>
    </div>
</div>
<br />
<br />
<table id="tblData" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Color</th>
            <th>Style</th>
            <th>Winery</th>
            <th>Grapes</th>
            <th>Volume</th>
            <th>IsInClasifier</th>
            <th>ClasifierId</th>
            <th></th>
        </tr>
    </thead>
</table>

